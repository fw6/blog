---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'a'>

const { href, class: className, ...props } = Astro.props

const { pathname } = Astro.url
const isActive = href === pathname || href === pathname.replace(import.meta.env.BASE_URL, '')
---

<a href={import.meta.env.BASE_URL.replace(/\/$/, '') + href} class="link" class:list={[className, { active: isActive }]} {...props}>
    <slot />
</a>
